---
import type { ProjectMetadata } from '@types';
import ProjectLayout from '@layouts/ProjectLayout.astro';
import Divider from '@components/Divider.astro';
import UseCase1 from 'src/assignments/lab02/UseCase1';
import UseCase2 from 'src/assignments/lab02/UseCase2';

export const metadata: ProjectMetadata = {
  title: 'Lab 02: Four Layer Architecture',
  description: 'A simple application showcasing 4 layers distributed in 4 different network components.',
  img: ''
}
---

<ProjectLayout
  h1_title='Four Layer Architecture'
  main_id='#four-layer'
  project_code={'lab02'}
>
  <Divider />

  <p style="padding-top: 6px;">
    Se cre√≥ una arquitectura de 4 capas distribuida en 4 nodos para servir
    dos simples requisitos.
  </p>

  <div style="margin-top: 16px; margin-bottom: 4px;">
    <img src="/softarch/img/4-layer-diagram.png" width="100%" />
  </div>

  <br>

  <div style="border: 1px solid rgb(193, 193, 193); padding: 14px; border-radius: 4px;">
    <UseCase2  client:only="react" />
  </div>
</ProjectLayout>

<style is:global lang="scss">

  h1 {
    margin-bottom: 2px;
  }

  h3 {
    margin-top: 0px;
  }

  code {
    font-size: 15px;
    display: none;
    background-color: #9b9898;
    border-radius: 4px;
  }

  table#records-list {
    scrollbar-gutter: stable;
    border-collapse: collapse;
    max-height: 24rem;
    overflow-y: auto;
    display: block;
    border: 1px solid #d0d0d0;

    thead, tr {
      width: 100%;
    }

    // this is a thin, modern scrollbar
    &::-webkit-scrollbar {
      width: 5px;
    }
    &::-webkit-scrollbar-track {
      background: #f1f1f1;
    }
    &::-webkit-scrollbar-thumb {
      background: #c5c5c5;
    }
    &::-webkit-scrollbar:horizontal {
      height: 5px;
    }
  }

  thead {
    position: sticky;
    top: 0;
  }

  tr {
    height: 34px;
    &:nth-child(even) {
      background: #f5f5f5;
    }
  }

  th {
    background: #eee;
    font-weight: bold;
    padding: 3px;
  }

  th, td {
    padding: 12px;
  }

  td {
    &.record-info-career {
      width: 100%;

      h4 {
        padding: none;
        margin: 0;
      }
      p {
        text-wrap: normal;
        word-wrap: break-word;
        margin: 0;
        margin-top: 10px;
      }
    }
    &.record-info-count {
      min-width: 100px;
      font-size: 18px;
      text-align: right;
    }
    &.record-info-tags {
      max-width: 400px;
      overflow-x: auto;
      text-overflow: clip;
      & .record-tag {
        margin-right: 6px;
        padding: 2px 4px;
        background-color: #e9ebf5;
        font-size: 14px;
      }
      &::-webkit-scrollbar:horizontal {
        height: 3px;
      }
    }
  }

  th {
    text-align: left;
    &.record-repr {
      min-width: 40px;
    }
    &.record-info-mimetype {
      min-width: 100px;
    }
    &.record-info-name {
      width: 100%;
    }
  }
</style>
