---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="El portafolio de Matemática Discreta de Paolo Luis Flores Cóngora UNMSM 2023-II"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'mathfont';
    src: url('/softarch/fonts/mathfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
  }

  :root{
    --border-color: #d9d9d9;
    --header-height: 3rem;
  }

  html {
    font-size: 1rem;
    font-family: 'Times New Roman', Times;
  }

  * {
    box-sizing: border-box;
  }

  a, a:visited {
    color: unset;
    color: black;
  }

  body {
    margin: 0;
    min-height: 100vh;
    overflow-x: hidden;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  *::-webkit-scrollbar {
    width: 8px;
  }
  *::-webkit-scrollbar-track {
    background: #757575;
  }
  *::-webkit-scrollbar-thumb {
    background: #bebebe;
  }
</style>
